{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "rootDir": "./",             
    "outDir": "./dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "dist/batch/startBatchJobs.js"],         
  "exclude": ["node_modules", "dist"],
}
